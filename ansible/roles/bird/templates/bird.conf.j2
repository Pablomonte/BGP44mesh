# BIRD BGP configuration for {{ node_name }}
# Generated by Ansible

router id {{ router_id }};

log syslog all;
debug protocols { states, routes, filters, interfaces, events };

# Device protocol - interface monitoring
protocol device {
    scan time 10;
}

# Kernel protocol - sync routes with kernel
protocol kernel {
    ipv4 {
        import none;
        export all;
    };
}

# Static routes
protocol static {
    ipv4;
}

# Include BGP peer configurations
include "/etc/bird/protocols.conf";
